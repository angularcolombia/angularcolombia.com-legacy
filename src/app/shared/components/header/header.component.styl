$fonts-text = 'Open Sans', 'Helvetica Neue', Arial, sans-serif
$color-primary = #e54242
$color-primary-hover = #b70000
$color-primary-shadow = rgba(240, 95, 64, 0.5)
$color-selected = #ffffff
$color-hover = #f05f40
$color-dark = #212529
$color-faded = rgba(255, 255, 255, 0.7)
$color-background = #868e96
$color-background-o = #212529
$color-text = #2f3640

header.masthead {
  padding-top: 10rem;
  padding-bottom: calc(10rem - 56px);
  background-image: url("../../../../assets/backgrounds/bogota-panoramica.jpg");
  background-position: center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover; }
  header.masthead hr {
    margin-top: 30px;
    margin-bottom: 30px; }
  header.masthead h1 {
    font-size: 2rem; }
  header.masthead p {
    font-weight: 300; }
  @media (min-width: 768px) {
    header.masthead p {
      font-size: 1.15rem; } }
  @media (min-width: 992px) {
    header.masthead {
      height: 100vh;
      min-height: 650px;
      padding-top: 0;
      padding-bottom: 0; }
      header.masthead h1 {
        font-size: 3rem; } }
  @media (min-width: 1200px) {
    header.masthead h1 {
      font-size: 4rem; } }

.next-event-header
    background-color white
    padding 20px
    border-radius 20px
    h3
        font-weight 700
        color $color-text
    p
        color $color-text

header
    &.masthead
        .overlay
            position absolute
            top 0
            left 0
            height 100%
            width 100%
            background-color $color-background-o
            opacity .5